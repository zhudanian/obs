<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.zdn.obs.dao.OrderDao">

    <sql id="orderColumn">
         order_id,
         confirm_date,
         order_state,
         customer_id
    </sql>
    <resultMap id="orderResultMap" type="Order">
        <id column="order_id" property="orderId" jdbcType="INTEGER" />
        <result column="confirm_date" property="confirmDate" jdbcType="TIMESTAMP" />
        <result column="order_state" property="orderState" jdbcType="INTEGER" />
        <association property="customerId" javaType="Customer">
            <id column="customer_id" property="customerId"/>
            <result column="customer_name" property="customerName"/>
            <result column="customer_address" property="customerAddress"/>
            <result column="customer_phone" property="customerPhone"/>
        </association>
    </resultMap>
    <select id="select" resultMap="orderResultMap">
        select
        <include refid="orderColumn"/>
        from
        order
        where
        order_id=#{orderId}
    </select>

    <select id="selectAll" resultMap="orderResultMap">
        select
        <include refid="orderColumn"/>
        from
        order
    </select>

    <update id="update" parameterType="Order">
        update
        order
        set
        confirm_date=#{confirmDate},
        order_state=#{orderState}
        where
        order_id=#{orderId}
    </update>

    <insert id="insert" parameterType="Order">
        insert into
        order
        values (
               #{confirmDate}
               #{orderState}
               #{customerId}
               )
    </insert>

    <delete id="delete">
        delete from
        order
        where
        order_id=#{orderId}
    </delete>

</mapper>